<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status_bar_blue">

    <ImageView
        android:id="@+id/ivLogoBackground"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/circle_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_app"
        app:tint="@color/status_bar_blue"
        app:layout_constraintBottom_toBottomOf="@id/ivLogoBackground"
        app:layout_constraintEnd_toEndOf="@id/ivLogoBackground"
        app:layout_constraintStart_toStartOf="@id/ivLogoBackground"
        app:layout_constraintTop_toTopOf="@id/ivLogoBackground" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="ROKO"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogoBackground" />

</androidx.constraintlayout.widget.ConstraintLayout> 